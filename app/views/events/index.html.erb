<div class="container">
    <div class="container pl-3">
        <h1 class="h3 ">Events</h1>

        <%= link_to "New Event", new_event_path, class:"btn btn-primary " %>
    </div>
    <div class="container row">
        <div class="col md-6 ">
            <h1 class="h3">Upcoming</h1>
            <% @upcoming.each do |event| %>
            <div class="card w-100 mb-2">
                <div class="card-body">
                    <h5 class="card-title"><%= event.name %></h5>
                    <p class="card-text"><%= event.date %></p>
                    <br />
                    <%=link_to "View event", event_path(event), class:"btn btn-primary mt-3" %>
                </div>
            </div>
            <%end %>
        </div>
        <div class="col md-6">
            <h1 class="h3">Past</h1>
            <% @past.each do |event| %>
            <div class="card w-100 mb-2">
                <div class="card-body">
                    <h5 class="card-title"><%= event.name %></h5>
                    <p class="card-text"><%= event.date %></p>
                    <br />
                    <%=link_to "View event", event_path(event), class:"btn btn-primary mt-3" %>
                </div>
            </div>
            <%end %>
        </div>
    </div>
</div>